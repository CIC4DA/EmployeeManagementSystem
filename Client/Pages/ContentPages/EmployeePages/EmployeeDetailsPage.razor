@if (ShowDetailsPage)
{
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card border-0 shadow-lg overflow-hidden" style="border-radius: 12px;">
                    <div class="card-header py-3"
                         style="background: linear-gradient(135deg, #1a2a6c, #3a7bd5);">
                        <h4 class="m-0 text-white fw-semibold">
                            <i class="bi bi-person-badge me-2"></i>@EmployeeDetails.Name Details
                        </h4>
                    </div>

                    <div class="card-body p-4">
                        <div class="row g-4">
                            <!-- Profile Column -->
                            <div class="col-md-4">
                                <div class="d-flex flex-column align-items-center mb-4">
                                    <img src="@EmployeeDetails.Photo"
                                         class="rounded-circle border border-4 border-white shadow-lg mb-3"
                                         style="width: 150px; height: 150px; object-fit: cover; transition: all 0.3s ease;"
                                         onmouseover="this.style.transform='scale(1.05)'"
                                         onmouseout="this.style.transform='scale(1)'" />

                                    <div class="w-100">
                                        <table class="table table-borderless">
                                            <tbody>
                                                <tr class="hover-effect">
                                                    <td class="fw-semibold text-muted">Name:</td>
                                                    <td>@EmployeeDetails.Name</td>
                                                </tr>
                                                <tr class="hover-effect">
                                                    <td class="fw-semibold text-muted">Job Title:</td>
                                                    <td>@EmployeeDetails.JobName</td>
                                                </tr>
                                                <tr class="hover-effect">
                                                    <td class="fw-semibold text-muted">Telephone:</td>
                                                    <td>@EmployeeDetails.TelephoneNumber</td>
                                                </tr>
                                                <tr class="hover-effect">
                                                    <td class="fw-semibold text-muted">Address:</td>
                                                    <td>@EmployeeDetails.Address</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <!-- Department Info Column -->
                            <div class="col-md-4">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-header bg-light">
                                        <h6 class="m-0 fw-semibold text-primary">
                                            <i class="bi bi-building me-2"></i>Department Information
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <table class="table table-borderless">
                                            <tbody>
                                                <tr class="hover-effect">
                                                    <td class="fw-semibold text-muted">General Department:</td>
                                                    <td>@EmployeeDetails.Branch.Department.GeneralDepartment.Name</td>
                                                </tr>
                                                <tr class="hover-effect">
                                                    <td class="fw-semibold text-muted">Department:</td>
                                                    <td>@EmployeeDetails.Branch.Department.Name</td>
                                                </tr>
                                                <tr class="hover-effect">
                                                    <td class="fw-semibold text-muted">Branch:</td>
                                                    <td>@EmployeeDetails.Branch.Name</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <!-- Location Info Column -->
                            <div class="col-md-4">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-header bg-light">
                                        <h6 class="m-0 fw-semibold text-primary">
                                            <i class="bi bi-geo-alt me-2"></i>Location Information
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <table class="table table-borderless">
                                            <tbody>
                                                <tr class="hover-effect">
                                                    <td class="fw-semibold text-muted">Country:</td>
                                                    <td>@EmployeeDetails.Town.City.Country.Name</td>
                                                </tr>
                                                <tr class="hover-effect">
                                                    <td class="fw-semibold text-muted">City:</td>
                                                    <td>@EmployeeDetails.Town.City.Name</td>
                                                </tr>
                                                <tr class="hover-effect">
                                                    <td class="fw-semibold text-muted">Town:</td>
                                                    <td>@EmployeeDetails.Town.Name</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-light border-0 py-3 text-end">
                        <button class="btn btn-outline-danger btn-hover-scale"
                                @onclick="DetailsPageCloseBtnClicked"
                                style="min-width: 120px;">
                            <i class="bi bi-x-circle me-2"></i>Close
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        /* Animations */
        .hover-effect {
            transition: all 0.3s ease;
        }

            .hover-effect:hover {
                background-color: rgba(58, 123, 213, 0.05) !important;
                transform: translateX(5px);
            }

        .btn-hover-scale {
            transition: all 0.2s ease;
        }

            .btn-hover-scale:hover {
                transform: scale(1.05);
            }

        /* Card styling */
        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
            }

        /* Table styling */
        .table {
            font-size: 0.9rem;
        }

            .table td {
                vertical-align: middle;
                padding: 0.75rem;
            }

        /* Profile image styling */
        .rounded-circle {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
}

@code {
    [Parameter] public bool ShowDetailsPage { get; set; }
    [Parameter] public Employee EmployeeDetails { get; set; } = new();
    [Parameter] public EventCallback HandleDetailsPageCloseBtnClicked { get; set; }

    async Task DetailsPageCloseBtnClicked() => await HandleDetailsPageCloseBtnClicked.InvokeAsync();
}
